{
  "name": "sst-backend-template-test",
  "version": "1.0.0",
  "description": "SST.dev Next.js app (frontend-only) deployment",
  "main": "sst.config.ts",
  "scripts": {
    "start": "sst dev",
    "deploy:test": "sst deploy --stage test",
    "deploy:prod": "sst deploy --stage prod",
    "remove": "sst remove",
    "test": "jest --config jest.config.unit.ts",
    "test:watch": "jest --config jest.config.unit.ts --watch",
    "test:coverage": "jest --config jest.config.unit.ts --coverage",
    "lint": "biome lint src/ tests/",
    "lint:fix": "biome lint --write src/ tests/",
    "format": "biome format --write src/ tests/",
    "check": "biome check src/ tests/",
    "check:fix": "biome check --write src/ tests/",
    "typecheck": "tsc --noEmit",
    "lint:full": "npm run lint && npm run typecheck",
    "check:full": "npm run check && npm run typecheck"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "sanitize-html": "^2.17.0",
    "slate": "^0.118.1",
    "slate-history": "^0.113.1",
    "slate-react": "^0.118.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/aws-lambda": "^8.10.155",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.10",
    "@types/sanitize-html": "^2.16.0",
    "aws-sdk-client-mock": "^4.1.0",
    "esbuild": "^0.25.11",
    "jest": "^29.7.0",
    "sst": "^3.17.19",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "license": "MIT"
}
